<?xml version="1.0"?>
  <robot xmlns:xacro="http://ros.org/wiki/xacro" name="manipulator">

    <xacro:macro name="inertial_cuboid" params="mass x_length y_length z_length">
      <inertial>
        <mass value="${mass}" />
        <origin xyz="0 0 0" />
        <inertia ixx="${(1/12) * mass * (y_length*y_length + z_length*z_length)}" ixy="0.0" ixz="0.0"
          iyy="${(1/12) * mass * (x_length*x_length + z_length*z_length)}" iyz="0.0"
          izz="${(1/12) * mass * (x_length*x_length + y_length*y_length)}" />
      </inertial>
    </xacro:macro>

    <xacro:macro name="inertial_dummy">
      <xacro:inertial_cuboid mass="1.0" x_length="0.01" y_length="0.01" z_length="0.01" />
    </xacro:macro>

    <xacro:property name="base_height" value="0.03" />
    <xacro:property name="link1_length" value="0.03" />
    <xacro:property name="link2_length" value="0.25" />
    <xacro:property name="link3_length" value="0.20" />

    <link name="world" />

    <joint name="fixed_joint" type="fixed">
      <parent link="world"/>
      <child link="base_link"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>
  
    <link name="base_link">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="$(cwd)/model/manipulator/base.stl"/>
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="$(cwd)/model/manipulator/base.stl"/>
        </geometry>
      </collision>
      <xacro:inertial_dummy/>
    </link>

    <gazebo reference="base_link">
      <material>Gazebo/Red</material>
    </gazebo>

    <joint name="joint_1" type="continuous">
      <parent link="base_link"/>
      <child link="link_1"/>
      <axis xyz="0 0 1"/>
      <origin xyz="0 0 ${base_height}" rpy="0 0 0"/>
    </joint>

    <link name="link_1">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="$(cwd)/model/manipulator/link_1.stl"/>
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="$(cwd)/model/manipulator/link_1.stl"/>
        </geometry>
      </collision>
      <xacro:inertial_dummy/>
    </link>

    <gazebo reference="link_1">
      <material>Gazebo/White</material>
    </gazebo>

    <joint name="joint_2" type="revolute">
      <parent link="link_1"/>
      <child link="link_2"/>
      <axis xyz="0 0 1"/>
      <limit effort="1000.0" lower="${pi/4}" upper="${pi/2}" velocity="1.0"/>
      <origin xyz="0 0 ${link1_length}" rpy="${pi/2} 0 0"/>
    </joint>

    <link name="link_2">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="$(cwd)/model/manipulator/link_2.stl"/>
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="$(cwd)/model/manipulator/link_2.stl"/>
        </geometry>
      </collision>
      <xacro:inertial_dummy/>
    </link>

    <gazebo reference="link_2">
      <material>Gazebo/Blue</material>
    </gazebo>

    <joint name="joint_3" type="revolute">
      <parent link="link_2"/>
      <child link="link_3"/>
      <axis xyz="0 0 1"/>
      <limit effort="1000.0" lower="${-pi}" upper="${pi/2}" velocity="1.0"/>
      <origin xyz="${link2_length} 0 0" rpy="0 0 0"/>
    </joint>

    <link name="link_3">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="$(cwd)/model/manipulator/link_3.stl"/>
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="$(cwd)/model/manipulator/link_3.stl"/>
        </geometry>
      </collision>
      <xacro:inertial_dummy/>
    </link>

    <gazebo reference="link_3">
      <material>Gazebo/Green</material>
    </gazebo>

  </robot>